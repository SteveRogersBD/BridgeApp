<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Left chat bubble (received messages) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/left_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="60dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/stroke_green"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/left_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, how are you?"
            android:textSize="16sp"
            android:textColor="@color/stroke_green"
            android:padding="12dp"
            android:maxWidth="250dp"
            android:shadowColor="@color/shadow_neon"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Right chat bubble (sent messages) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/right_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/button_bg"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/right_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am fine!!!"
            android:textSize="16sp"
            android:textColor="@color/button_bg"
            android:padding="12dp"
            android:maxWidth="250dp"
            android:shadowColor="@color/shadow_neon"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4" />

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>