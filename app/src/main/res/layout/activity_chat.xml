<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".ChatActivity">




    <!-- Chat RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp"
        android:layout_above="@+id/send_card"
        android:scrollbars="none" />

    <!-- Bottom Input Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/send_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:layout_marginEnd="14dp"
        app:strokeColor="@color/button_bg"
        android:layout_alignParentBottom="true"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/bottom_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="2dp">

            <!-- Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/surface_variant"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="@color/primary"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/on_surface_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type a message..."
                    android:maxLines="4"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/on_surface"
                    android:textColorHint="@color/on_surface_variant"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Send Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="24dp"
                android:padding="3dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/send_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/send"
                    app:tint="@color/on_primary" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ① Floating Mic Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/send_card"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_name"
        app:useCompatPadding="true"
        app:backgroundTint="@color/primary"
        app:tint="@color/on_primary"
        android:src="@drawable/mic"
        app:srcCompat="@drawable/mic" />

    <!-- ② Fullscreen Lottie Overlay -->
    <RelativeLayout
        android:id="@+id/mic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <!-- scrim to dim background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"/>

        <!-- centered lottie animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mic_lottie"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            app:lottie_rawRes="@raw/audio_wave"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mic_lottie"
            android:text="Listening...."
            android:gravity="center"
            android:textSize="30sp"
            />
    </RelativeLayout>

</RelativeLayout>